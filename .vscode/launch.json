    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Textmate C",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/textmate.js",
            "args": [
                "./test/test2.c"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Textmate C Caller",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/textmateCaller.js",
            "args": [
                "./test/test2.c",
                "main"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Textmate CPP Caller",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/textmateCaller.js",
            "args": [
                "./test/test1.cpp",
                "main"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Textmate CPP",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/textmate.js",
            "args": [
                "./test/test1.cpp"
            ]
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Python - Log to Dir, All Functions",
            "program": "${workspaceFolder}/allFiles.py",
            "args": [
                "./test/"
            ]
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Python - Log to single file, All Functions",
            "program": "${workspaceFolder}/allFiles.py",
            "args": [
                "./test/test1.c"
            ]
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Python - Caller",
            "program": "${workspaceFolder}/allFiles.py",
            "args": [
                "./test/",
                "caller",
                "main"
            ]
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Python - Unit Test",
            "program": "${workspaceFolder}/test.py",
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Python - Makefile",
            "program": "/data/preston-utils/makefile/makefile.py",
            "cwd" : "/data/preston-utils/makefile/",
            "args": [
                "/data/preston-utils/makefile/test/Makefile1.mk",
                "VAR1=VAR1 VAR2=VAR2"
            ]
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Python - Makefile - Unit Test",
            "program": "/data/preston-utils/makefile/test.py",
            "cwd" : "/data/preston-utils/makefile/",
        },
    ]
}